rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isUser(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    function isSelf(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    // Prevent self-service role escalation at profile creation.
    function isRoleSafeForSelfCreate() {
      return request.resource.data.get('role', null) in [null, 'member'];
    }

    // Keep role locked for self-updates, with a one-time legacy null -> member migration.
    function isRoleUnchangedOrDefaultMember() {
      let currentRole = resource.data.get('role', null);
      let nextRole = request.resource.data.get('role', null);
      return nextRole == currentRole
        || (currentRole == null && nextRole == 'member');
    }

    // Self cannot clear or set enforcement flags.
    function protectedFieldsUnchanged() {
      return request.resource.data.get('isBanned', null) == resource.data.get('isBanned', null)
        && request.resource.data.get('ugcDisabled', null) == resource.data.get('ugcDisabled', null)
        && request.resource.data.get('timeoutUntil', null) == resource.data.get('timeoutUntil', null)
        && request.resource.data.get('bannedAt', null) == resource.data.get('bannedAt', null)
        && request.resource.data.get('bannedBy', null) == resource.data.get('bannedBy', null);
    }

    function isModerator(uid) {
      return isSignedIn()
        && uid != null
        && get(/databases/$(database)/documents/users/$(uid)).data.role in ['moderator', 'admin'];
    }

    function getUserDoc(uid) {
      return get(/databases/$(database)/documents/users/$(uid)).data;
    }

    function isBanned(uid) {
      return getUserDoc(uid).isBanned == true;
    }

    function isUgcDisabled(uid) {
      return getUserDoc(uid).ugcDisabled == true;
    }

    function isTimedOut(uid) {
      return (getUserDoc(uid).timeoutUntil is timestamp
        && getUserDoc(uid).timeoutUntil > request.time)
        || (getUserDoc(uid).timeoutUntil is int
        && getUserDoc(uid).timeoutUntil > request.time.toMillis());
    }

    function canWriteUgc(uid) {
      return isSignedIn()
        && !isBanned(uid)
        && !isUgcDisabled(uid)
        && !isTimedOut(uid);
    }

    function isThreadParticipant(threadId) {
      return isSignedIn()
        && request.auth.uid in get(/databases/$(database)/documents/dms/$(threadId)).data.participants;
    }

    function isOwnerOrModerator(resourceUserId) {
      return resourceUserId == request.auth.uid || isModerator(request.auth.uid);
    }

    match /channels/{channelId}/messages/{messageId} {
      allow read: if isSignedIn();
      allow create: if canWriteUgc(request.auth.uid)
        && request.resource.data.userId == request.auth.uid;
      allow update, delete: if canWriteUgc(request.auth.uid)
        && (resource.data.userId == request.auth.uid
          || isModerator(request.auth.uid));
    }

    match /users/{uid} {
      allow read: if isSignedIn() && (isUser(uid) || isModerator(request.auth.uid));
      // Self can create only with a safe role (missing/member), never moderator/admin.
      allow create: if isSelf(uid)
        && request.resource.data.uid == uid
        && isRoleSafeForSelfCreate();
      allow update: if (isSelf(uid)
          && protectedFieldsUnchanged()
          && isRoleUnchangedOrDefaultMember())
        || isModerator(request.auth.uid);
      allow delete: if isModerator(request.auth.uid);
    }

    match /publicUsers/{uid} {
      allow read: if isSignedIn();
      // Public role mirrors must also be locked against self-escalation.
      allow create: if isSelf(uid)
        && isRoleSafeForSelfCreate()
        || isModerator(request.auth.uid);
      allow update: if (isSelf(uid)
          && isRoleUnchangedOrDefaultMember())
        || isModerator(request.auth.uid);
      allow delete: if isModerator(request.auth.uid);
    }

    match /users/{uid}/hiddenContent/{docId} {
      allow read, write: if isUser(uid);
    }

    match /users/{uid}/lastRead/{channelId} {
      allow read, write: if isUser(uid);
    }

    match /users/{uid}/lastReadDMs/{threadId} {
      allow read, write: if isUser(uid);
    }

    match /users/{uid}/sharedSplits/{docId} {
      allow read, write: if isUser(uid);
    }

    match /users/{uid}/cart/{docId} {
      allow read, write: if isUser(uid);
    }

    match /users/{uid}/redemptions/{docId} {
      allow read, write: if isUser(uid);
    }

    match /blocks/{blockId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn()
        && request.resource.data.blockerUid == request.auth.uid;
      allow update, delete: if isSignedIn()
        && (resource.data.blockerUid == request.auth.uid
          || isModerator(request.auth.uid));
    }

    match /reports/{reportId} {
      allow read: if isModerator(request.auth.uid)
        || resource.data.reportedBy == request.auth.uid;
      allow create: if isSignedIn()
        && request.resource.data.reportedBy == request.auth.uid;
      allow update: if isModerator(request.auth.uid);
    }

    match /news/{newsId} {
      allow read: if isSignedIn();
      allow write: if isModerator(request.auth.uid);
    }

    match /moderationActions/{id} {
      allow read, write: if isModerator(request.auth.uid);
    }

    match /dms/{threadId} {
      allow read: if isSignedIn() && request.auth.uid in resource.data.participants;
      allow create: if canWriteUgc(request.auth.uid)
        && request.auth.uid in request.resource.data.participants
        && request.resource.data.participants is list
        && request.resource.data.participants.size() == 2
        && request.resource.data.participants[0] != request.resource.data.participants[1];
      allow update: if canWriteUgc(request.auth.uid)
        && request.auth.uid in resource.data.participants
        && request.resource.data.participants == resource.data.participants;
    }

    match /dms/{threadId}/messages/{messageId} {
      allow read: if isSignedIn()
        && request.auth.uid in get(/databases/$(database)/documents/dms/$(threadId)).data.participants;
      allow create: if canWriteUgc(request.auth.uid)
        && request.resource.data.userId == request.auth.uid
        && request.auth.uid in get(/databases/$(database)/documents/dms/$(threadId)).data.participants;
      allow update, delete: if canWriteUgc(request.auth.uid)
        && (resource.data.userId == request.auth.uid
          || isModerator(request.auth.uid))
        && request.auth.uid in get(/databases/$(database)/documents/dms/$(threadId)).data.participants;
    }

    match /stories/{userId}/storyMedia/{storyId} {
      allow read: if isSignedIn();
      allow create: if isUser(userId) && canWriteUgc(request.auth.uid);
      allow update, delete: if isUser(userId) && canWriteUgc(request.auth.uid);
    }

    match /videos/{videoDoc}/gym-feed/{videoId} {
      allow read: if isSignedIn();
      allow create: if canWriteUgc(request.auth.uid)
        && request.resource.data.userId == request.auth.uid;
      allow update, delete: if canWriteUgc(request.auth.uid)
        && (resource.data.userId == request.auth.uid
          || isModerator(request.auth.uid));
    }
  }
}
